  <script src="/libraries/palette.js/palette.js"></script>

  <!-- 2. Configure SystemJS -->
  <script>
      System.config({
          packages: {
              js: {
                  format: 'register',
                  defaultExtension: 'js'
              }
          }
      });
      System.import('js/boot').then(null, console.error.bind(console));
  </script>
